{
  "name": "bpt-static",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "–––––––INIT FOLDER SCRIPTS": "–––––––––––––",
    "fold:clean": "rm -R -rf dist",
    "fold:src": "mkdir -p src/{css,img,fav,js,fonts}",
    "fold:dist": "mkdir -p dist/public/{css,img,fav,js,fonts}",
    "fold:files": "cp -R -f src/js src/img src/fav src/*.html src/fonts dist/public/",
    "–––––––INIT CSS SCRIPTS": "–––––––––––––",
    "css:concat": "cat src/css/*.css > dist/public/css/bundle.css",
    "postcss:next": "postcss postcss-cssnext dist/public/css/bundle.css -o dist/public/css/bundle.next.css",
    "css:minify": "cleancss -o dist/public/css/bundle.min.css dist/public/css/bundle.next.css",
    "build:css": "echo '=> build:css' && npm run css:concat && npm run postcss:next && npm run css:minify",
    "–––––––WATCH SCRIPTS": "–––––––––––––",
    "watch": "watch 'npm run build:css' src/css",
    "browsersync": "cd dist/public && browser-sync start --server --files '*.html, css/*.css, js/*.js'",
    "–––––––EXPERIMENTAL FEATURES": "–––––––––––––",
    "css:uncss": "cat dist/public/*.html | uncss -s dist/public/css/bundle.min.css > dist/public/css/bundle.opt.css",
    "critical": "critical index.html --base ./dist/public/ --css ./dist/public/css/bundle.min.css --inline --minify > ./dist/public/index.critical.html",
    "––––––– CREATE DIST FOLDER": "–––––––––––––",
    "dist": "npm run fold:clean && npm run fold:dist && npm run fold:files && npm run build:css",
    "dist-opt": "npm run fold:clean && npm run fold:dist && npm run fold:files && npm run build:css && npm run css:uncss"
  },
  "author": "Andressa Costa",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.2.4",
    "browser-sync": "^2.23.5",
    "clean-css": "^4.1.9",
    "clean-css-cli": "^4.1.10",
    "concat-cli": "^4.0.0",
    "critical": "^1.1.0",
    "http-server": "^0.11.1",
    "postcss": "^6.0.16",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-fontpath": "^1.0.0",
    "postcss-load-config": "^1.2.0",
    "postcss-uncss": "^0.16.1",
    "precss": "^3.1.0",
    "rimraf": "^2.6.2",
    "uncss": "^0.16.1",
    "watch": "^1.0.2"
  }
}
